@model RazorTemplateAssignment.Models.StudentViewModel

<h1>Assignment 6.1</h1>

@if(Model.AccessLevel < 2)
{
    <p>You don't have an access level that is allowed to see this page.</p>
}
else
{
    @if(Model.AccessLevel >= 8)
    {
        <h2>Hello Admin!</h2>
    }
    <table class="table">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                @if(Model.AccessLevel >= 8)
                {
                    <th>Grade</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model.Students)
            {
                ViewBag.ShowGrade = Model.AccessLevel >= 8;
                <partial name="_PartialView" model="student" />
            }
        </tbody>
    </table>
}
