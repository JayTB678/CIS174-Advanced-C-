@model Ticket

<h2>Add a Brand New Ticket</h2>
<div class="form-control">
    <form asp-action="Add" method="post">
        <div class="form-group">
            <label>Name:</label>
            <input asp-for="Name" type="text" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Description:</label>
            <textarea asp-for="Description" class="form-control mt-2"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Status:</label>
            <select asp-for="TicketStatusId" asp-items="ViewBag.Statuses" class="form-control mt-2">
                <option value="" selected>Select a status</option>
            </select>
            <span asp-validation-for="TicketStatusId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Sprint Number:</label>
            <input asp-for="SprintNumber" type="number" class="form-control mt-2"/>
            <span asp-validation-for="SprintNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Point Value:</label>
            <input asp-for="PointValue" type="number" class="form-control mt-2"/>
            <span asp-validation-for="PointValue" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Add</button>
        <a asp-action="Index" class="btn btn-primary mt-3">Cancel</a>
    </form>
</div>
