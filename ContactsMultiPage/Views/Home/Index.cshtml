@model List<Contact>
@{
    ViewData["Title"] = "List of Contacts";
}

<h2>List of Contacts</h2>

<a asp-controller="Home" asp-action="Add" class="btn btn-primary">Add New Contact</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Phone Number</th>
            <th>Address</th>
            <th>Note</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model){
            <tr>
                <td>@contact.Name</td>
                <td>@contact.Phone</td>
                <td>@contact.Address</td>
                <td>@contact.Note</td>
                <td>
                    <a asp-controller="Home" asp-action="Delete"
                        asp-route-id="@contact.ContactId"
                        class="btn btn-primary">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
