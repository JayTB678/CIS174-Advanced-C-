@model List<OlympicSport>
@{
    ViewData["Title"] = "Olympic Sports By Country";
}

<h1>@ViewBag.Title</h1>

<div class="row">
    <div class="col-sm-3">
        <h3 class="mt-3">Game</h3>
        <div class="list-group">
            <a asp-action="Index" asp-route-game="ALL" class="list-group-item list-group-item-action @(ViewBag.SelectedGame == "ALL" ? "active" : "")">
                ALL
            </a>
            @foreach (var game in ViewBag.Games)
            {
                <a asp-action="Index" asp-route-game="@game" asp-route-category="@ViewBag.SelectedCategory" class="list-group-item list-group-item-action @(ViewBag.SelectedGame == game ? "active" : "")">
                    @game
                </a>
            }
        </div>
    </div>
    <div class="col-sm-3">
        <h3 class="mt-3">Category</h3>
        <div class="list-group">
            <a asp-action="Index" asp-route-category="ALL" asp-route-game="@ViewBag.SelectedGame" class="list-group-item list-group-item-action @(ViewBag.SelectedCategory == "ALL" ? "active" : "")">
                ALL
            </a>
            @foreach (var category in ViewBag.Categories)
            {
                <a asp-action="Index" asp-route-category="@category" asp-route-game="@ViewBag.SelectedGame" class="list-group-item list-group-item-action @(ViewBag.SelectedCategory == category ? "active" : "")">
                    @category
                </a>
            }
        </div>
    </div>
    <div class="col-sm-9">
        <h3 class="mt-3">Countries</h3>
        @foreach (var country in Model)
        {
            <img src="@country.FlagUrl" alt="@country.Name" title="@country.Name - @country.Game (@country.Category)" class="flag" />
        }
    </div>
</div>
<style>
    .flag {
        margin: 10px;
        cursor: pointer;
        width: 80px;
    }
</style>